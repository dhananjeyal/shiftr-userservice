        "/user/drivers": {
            "get": {
                "summary": "Get all drivers",
                "tags": [
                    "Driver management"
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "type": "string",
                        "default": "1"
                    },
                    {
                        "name": "chunk",
                        "in": "query",
                        "type": "string",
                        "default": "10"
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "type": "string"
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "1 = Active users \n\n 2 = Suspended users",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "1",
                                "4"
                            ]
                        }
                    },
                    {
                        "name": "signUpStatus",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "5",
                                "6",
                                "7",
                                "8",
                                "9"
                            ]
                        },
                        "description": "5 = Personal details\n\n6 = Vehicle details\n\n7 = Driver documents\n\n8 = Financial details\n\n9 = Completed"
                    }
                ],
                "responses": {}
            }
        },
